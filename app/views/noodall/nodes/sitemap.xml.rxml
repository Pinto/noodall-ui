xml.instruct!
 
xml.urlset "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
# homepage
    xml.url do
      xml.loc         root_path(:only_path => false)
      xml.lastmod     File.new("#{RAILS_ROOT}/app/views/nodes/home.html.erb").mtime.to_formatted_s(:w3c)
      xml.changefreq  "daily"
      xml.priority    1
    end

# nodes
  @nodes.each do |node|
    xml.url do
      xml.loc         node_path(node,:only_path => false)
      xml.lastmod     node.updated_at.to_formatted_s(:w3c)
      xml.changefreq  "daily"
      xml.priority    1
    end
  end

end
