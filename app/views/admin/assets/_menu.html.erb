<ul class="choices">
  <%= content_tag :li, link_to( 'Back', nil ), :class => 'back' if params[:allowed_types] %>
  <li class="upload"><%= link_to 'Upload', new_admin_asset_path(:readonly => readonly) %></li>
  <%= content_tag :li, link_to( 'Images', admin_assets_path(:readonly => readonly) ), :class => 'images' if params[:allowed_types].blank? or params[:allowed_types].include?('images') %>
  <%= content_tag :li, link_to( 'Documents', documents_admin_assets_path(:readonly => readonly) ), :class => 'documents' if params[:allowed_types].blank? or params[:allowed_types].include?('documents') %>
  <%= content_tag :li, link_to( 'Videos', videos_admin_assets_path(:readonly => readonly) ), :class => 'videos' if params[:allowed_types].blank? or params[:allowed_types].include?('videos') %>
</ul>
